     <h1>User info</h1>
     <%= image_tag @user.get_profile_image(100,100) %>
     <h2>name</h2>
     <p><%= @user.name %></p>

     <h2>introduction</h2>
     <p><%= @user.introduction %></p>

     <%= link_to edit_user_path(current_user.id), :method => :get do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
     
     <h1>New book</h1>
     <%= form_with model: book, local:true do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
	
     <h4>Opinion</h4>
     <%= f.text_area :body %>
	
     <%= f.submit 'Create Book' %>
     <% end %>