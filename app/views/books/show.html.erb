<%= render 'list', book: @book %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
	
<h4>Opinion</h4>
<%= f.text_area :body %>
	
<%= f.submit 'Create Book' %>
<% end %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  	<table class="table">
  		<tbody>
  		  <tr>
           <td>
            <%= link_to user_path(current_user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %> <br>
            <%= @book.user.name %>    
            <% end %>
           </td>
           <td><%= link_to @book.title, book_path(@book) %></td>
           <td><%= @book.body %></td>
           <td>
           <%= link_to edit_book_path(current_user.id), class: "btn btn-sm btn-success", :method => :get do %>
           edit
           <% end %>
           </td>
           <td>
             <% if @book.user == current_user %>
              <%= link_to book_path(@book), class: "btn btn-sm btn-danger", :method => :delete do %>
              destroy
              <% end %>
             <% end %>
           </td>
        </tr>
      </tbody>
    </table>
  </div>