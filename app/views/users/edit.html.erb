<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, local:true do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
  
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true,　maxlength: "50", id:"inputIntroduction" %>
  
  <%= f.submit "Update User" %>
<% end %>